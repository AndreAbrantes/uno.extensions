<Project Sdk="MSBuild.Sdk.Extras" ToolsVersion="15.0">
	<PropertyGroup>
		<TargetFrameworks Condition="'$(UnoExtensionsOnlyUAP)'=='true'">uap10.0.18362</TargetFrameworks>
		<TargetFrameworks Condition="'$(UnoExtensionsOnlyUAP)'==''">netstandard2.0;netstandard2.1;xamarinios10;monoandroid10.0;monoandroid11.0</TargetFrameworks>
		<TargetFrameworks Condition="'$(UnoExtensionsDisableNet6)'=='' and '$(UnoExtensionsOnlyUAP)'==''">$(TargetFrameworks);net5.0;net6.0;net5.0-windows10.0.18362.0;net6.0-ios;net6.0-android</TargetFrameworks>
	</PropertyGroup>

	<Import Project="common.props"/>
	
	<ItemGroup>
		<PackageReference Include="Uno.WinUI" Version="4.0.0-dev.5645" />
	</ItemGroup>

	<PropertyGroup>
		<DefineConstants>$(DefineConstants);WINUI</DefineConstants>
	</PropertyGroup>

	<ItemGroup Condition="'$(TargetFramework)'=='net5.0-windows10.0.18362.0'">
		<PackageReference Include="Microsoft.WindowsAppSDK" Version="1.0.0" />
		<PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.22000.196"/>

		<FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" RuntimeFrameworkVersion="10.0.18362.21" />
		<FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" TargetingPackVersion="10.0.18362.21" />
	</ItemGroup>
</Project>
